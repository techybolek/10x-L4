---
import Layout from '../layouts/Layout.astro';
import { MessageForm } from '../components/MessageForm';
---

<Layout title="Home">
	<main class="min-h-screen bg-gradient-to-b from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800">
		<div class="container mx-auto p-8 max-w-2xl">
			<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 space-y-6">
				<h1 class="text-4xl font-bold text-gray-900 dark:text-white">Welcome</h1>
				<p class="text-gray-600 dark:text-gray-300">Enter your message below:</p>
				<div id="form-container" style="min-height: 200px;">
					<MessageForm client:only="react" />
				</div>
			</div>
		</div>
	</main>
</Layout> 